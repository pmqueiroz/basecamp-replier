{
   "name": "Basecamp Replier",
   "version": "0.0.1",
   "description": "Gives you a way to reply messages on basecamp 3",
   "permissions": ["activeTab", "http://*/*"],
   "manifest_version": 2,
   "content_scripts": [
      {
         "matches": [
            "*://*.3.basecamp.com/*"
         ],
         "js": ["src/index.js"],
         "css": ["src/style.css"]
      }
   ]
}